<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reject_Reason_rule</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL( Loan_status__c ,&quot;Rejected&quot;) , ISPICKVAL( Reject_reason__c , &quot;&quot;) )</errorConditionFormula>
    <errorDisplayField>Reject_reason__c</errorDisplayField>
    <errorMessage>Reject reason should not be blank</errorMessage>
</ValidationRule>
